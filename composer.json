{
  "name": "joepdooper/ivy",
  "description": "Yet another sleek simple fast CMS with an effortless template and plugin environment",
  "type": "project",
  "license": "MIT",
  "authors": [
    {
      "name": "Joep Dooper"
    }
  ],
  "require": {
    "php": ">=8.4.0",
    "joepdooper/ivy-roots": "dev-main"
  },
  "scripts": {
    "post-install-cmd": [
      "[ \"$COMPOSER_DEV_MODE\" = \"1\" ] && npm install || npm install --production"
    ]
  },
  "minimum-stability": "dev",
  "prefer-stable": true,
  "require-dev": {
    "pestphp/pest": "3.x-dev",
    "phpstan/phpstan": "2.0.x-dev",
    "kint-php/kint": "dev-master",
    "joepdooper/ivy-cultivate": "dev-main"
  },
  "config": {
    "platform": {
      "php": "8.4.0"
    },
    "allow-plugins": {
      "pestphp/pest-plugin": true
    }
  }
}
